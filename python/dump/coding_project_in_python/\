
score = 0
print("Guess the Animal!")


running = True
while running:
    ans = input("Which live at the North Pole? ")
    if ans == "polar bear":
        print("correct answer")
        score += 1
    else:
        attempt = 0
        while attempt < 2:
            ans = input("Sorry, wrong answer. Try again. ")
            if ans == "polar bear":
                print("correct answer")
                score += 1
                break
            attempt += 1

    ans = input("Which is the largest animal? ")
    if ans == "whale":
        print("correct answer")
        score += 1
    else:
        attempt = 0
        while attempt < 2:
            ans = input("Sorry, wrong answer. Try again. ")
            if ans == "whale":
                print("correct answer")
                score += 1
                break
            attempt += 1

    ans = input("Which is the fastest animal? ")
    if ans == "cheetah":
        print("correct answer")
        score += 1
    else:
        attempt = 0
        while attempt < 2:
            ans = input("Sorry, wrong answer. Try again. ")
            if ans == "cheetah":
                print("correct answer")
                score += 1
                break
            attempt += 1
    print(f"Your score is {score}")
    running = False
